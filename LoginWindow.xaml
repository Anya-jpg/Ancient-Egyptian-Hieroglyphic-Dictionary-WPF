<Window x:Class="EgyptianDictionary.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EgyptianDictionary"
        mc:Ignorable="d"
        Title="Авторизация" Height="200" Width="400" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Text="Логин" Margin="10"/>
        <TextBlock Text="Пароль" Margin="10"
                   Grid.Row="1"/>
        <TextBox x:Name="TBLogin" Margin="10"
                 Grid.Column="1" Grid.Row="0"/>
        <PasswordBox x:Name="PBPassword" Margin="10"
                     Grid.Column="1" Grid.Row="1"/>
        <Button Grid.Column="0" Grid.Row="2" Margin="10"
                Content="Войти" Click="BLogin_Click"/>
        <Button Grid.Column="1" Grid.Row="2" Margin="10"
                Content="Зарегистрироваться" Click="BRegistration_Click"/>
    </Grid>
</Window>
